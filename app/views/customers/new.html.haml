%h1 Add customer 

=form_for @customer do |f|
  %div.field
  =f.label :first_name
  %br
  =f.text_field :first_name
  %br
  =f.label :last_name
  %br
  =f.text_field :last_name
  %br
  =f.label :address
  %br
  =f.text_field :address
  %br
  =f.label :city
  %br
  =f.text_field :city
  %br
  =f.label :state
  %br
  =f.text_field :state
  %br
  =f.label :zip
  %br
  =f.text_field :zip
  %br
  =f.label :contact
  %br
  =f.text_field :contact
  %br
  =f.submit "Add"
