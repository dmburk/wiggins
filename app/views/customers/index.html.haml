%h1 Customers 

%table
  %tr.even
    %td
      %b Name
    %td
      %b Address
    %td
      %b City
    %td
      %b State
    %td
      %b Zip
    %td
      %b Contact
  -@customers.each do |customer|
    %tr{ :class => cycle('odd', 'even') }
      %td
        ="#{customer.first_name} #{customer.last_name}"
      %td
        =customer.address
      %td
        =customer.city
      %td
        =customer.state
      %td
        =customer.zip
      %td
        =customer.contact
%br
=link_to "Add customer", new_customer_path
